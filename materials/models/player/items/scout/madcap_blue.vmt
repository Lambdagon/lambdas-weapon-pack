"VertexlitGeneric"
{
	"$baseTexture" "models/player/items/scout/madcap"
	"$detail" "effects/tiledfire/fireLayeredSlowTiled512.vtf"	
	"$detailscale" "1"
	"$detailblendfactor" .01
	"$detailblendmode" 6
	"$yellow" "0"

	"$blendtintbybasealpha" "1" 
	"$blendtintcoloroverbase" "0"   // between 0-1 determines how much blended by tinting vs. replacing the color
	"$colortint_base" "{47 41 176}"
	"$colortint_tmp" "[0 0 0]" 

	"$phong" "1"
	"$phongexponent" "20"
	"$phongboost" "0"
	"$lightwarptexture" "models/player/pyro/pyro_lightwarp"
	"$phongfresnelranges"	"[.25 1 4]"

	// Rim lighting parameters
	"$rimlight" "1"												// To enable rim lighting (requires phong)
	"$rimlightexponent" "2"										// Exponent for phong component of rim lighting	
	"$rimlightboost" "0.35"

	// Cloaking
	"$cloakPassEnabled" "1"
	"Proxies"
	{
		"weapon_invis"
		{
		}
		"BurnLevel"
		{
			"resultVar" "$detailblendfactor"
		}
		"YellowLevel"
		{
			"resultVar" "$yellow"
		}
		"Equals"
		{
			"srcVar1"  "$yellow"
			"resultVar" "$color2"
		}

		"ItemTintColor"
		{
			"resultVar" "$colortint_tmp"
		}
		"SelectFirstIfNonZero"
		{
			"srcVar1"	"$colortint_tmp"
			"srcVar2"	"$colortint_base"
			"resultVar" "$color2"
		}
	}
}
